@model  EntidadesCompartidas.Clientes

@{
    ViewBag.Title = "Consulta de Cliente";
}

<h2>Consulta de Cliente</h2>

@if (ViewBag.Mensaje != null)
{
    <div style="color:red;">
        @ViewBag.Mensaje
    </div>
}

@if (Model != null && Model.IDPasaporte != null)
{
    <div>
        <label>ID Pasaporte:</label>
        <span>@Model.IDPasaporte</span>
    </div>

    <div>
        <label>Nombre:</label>
        <span>@Model.Nombre</span>
    </div>

    <div>
        <label>Contraseña:</label>
        <span>@Model.Contrasena</span>
    </div>

    <div>
        <label>Número de Tarjeta:</label>
        <span>@Model.NTarjeta</span>
    </div>

    <div>
        @Html.ActionLink("Volver", "MenuClientes", "Clientes")
    </div>
}
