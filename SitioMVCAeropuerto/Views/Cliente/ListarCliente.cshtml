@model IEnumerable<EntidadesCompartidas.Clientes>

@{
    ViewBag.Title = "Listado Facturas";
}

<h2>Listado de Facturas</h2>


@ViewBag.Mensaje


<p>
    @Html.ActionLink(" Volver", "Principal", "Home")
</p>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Pasaporte:  @Html.TextBox("Pasaporte", "")</td>
            <td>Nombre:  @Html.TextBox("Nombre", "")</td>
            
            <td><input type="submit" value="Filtrar" class="btn btn-default" /></td>
            <td>
                @Html.ActionLink("Limpiar", "FormListarCliente", null, new { @class = "btn btn-default" })
        </td>
    </tr>
</table>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDPasaporte)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
     
        <th>
            @Html.Label("Cantidad clientes ")
        </th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDPasaporte)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            
            
            <td>
                @Html.ActionLink("Consultar", "FormFacturaConsultar", new { item.IDPasaporte })
            </td>

        </tr>
    }

</table>

