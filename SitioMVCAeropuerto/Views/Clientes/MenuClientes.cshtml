@model   EntidadesCompartidas.Clientes

@{
    ViewBag.Title = "Menú de Clientes";
}

<h2>Menú de Clientes</h2>

@if (ViewBag.Mensaje != null)
{
    <div style="color:red;">
        @ViewBag.Mensaje
    </div>
}

@using (Html.BeginForm())
{
    <div>
        <label>Filtrar por nombre:</label>
        <input type="text" name="Filtro" value="@ViewBag.CurrentFilter" />
        <input type="submit" value="Filtrar" />
    </div>
}

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <!-- Agregar más columnas según sea necesario -->
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Apellido</td>
                    <!-- Agregar más columnas según sea necesario -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron clientes.</p>
}
